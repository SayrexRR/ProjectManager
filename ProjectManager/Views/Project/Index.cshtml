@using ProjectManager.DataLayer.Entity
@model IEnumerable<Project>

@{
    ViewData["Title"] = "Projects";
}

<table class="table">
    <thead>
        <tr>
            <th>@Html.DisplayNameFor(model => model.Name)</th>
            <th>@Html.DisplayNameFor(model => model.StartDate)</th>
            <th>@Html.DisplayNameFor(model => model.EndDate)</th>
            <th></th>
        </tr>
    </thead>
    @if (Model != null)
    {
        @foreach (Project p in Model)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => p.Name)</td>
                <td>@Html.DisplayFor(modelItem => p.StartDate)</td>
                <td>@Html.DisplayFor(modelItem => p.EndDate)</td>
                <td>
                    <a asp-action="Index" asp-controller="Task" asp-route-projectId="@p.Id">Tasks</a> |
                    <a asp-action="Delete" asp-controller="Project" asp-route-id="@p.Id">Delete Project</a>
                </td>
            </tr>
        }
    }
</table>