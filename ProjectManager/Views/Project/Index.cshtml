@using ProjectManager.BusinessLayer.Models
@model IEnumerable<ProjectModel>

@{
    ViewData["Title"] = "Projects";
}
<h1>Project list</h1>

<p>
    <a asp-action="Create" asp-controller="Project">Create new project</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>@Html.DisplayNameFor(model => model.Name)</th>
            <th>@Html.DisplayNameFor(model => model.StartDate)</th>
            <th>@Html.DisplayNameFor(model => model.EndDate)</th>
            <th></th>
            <th></th>
        </tr>
    </thead>
    @if (Model != null)
    {
        @foreach (ProjectModel p in Model)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => p.Name)</td>
                <td>@Html.DisplayFor(modelItem => p.StartDate)</td>
                <td>@Html.DisplayFor(modelItem => p.EndDate)</td>
                <td>
                    <a class="btn btn-primary" asp-action="Edit" asp-controller="Project" asp-route-id="@p.Id">Edit</a> |
                    <a class="btn btn-danger" asp-action="Delete" asp-controller="Project" asp-route-id="@p.Id">Delete</a>
                </td>
                <td>
                    <a class="btn btn-info" asp-action="Index" asp-controller="Task" asp-route-projectId="@p.Id">Task List</a>
                </td>
            </tr>
        }
    }
</table>