@using ProjectManager.BusinessLayer.Models
@model ProjectModel
@{
    ViewData["Title"] = "Edit project";
    var project = ViewBag.Project as ProjectModel;
}

<h1>Edit Project</h1>

<h4>Project</h4>
<hr />
<div class="container">
    <div class="row">
        <form asp-action="Edit" asp-route-id="@Model.Id">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="col-md-8">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="col-md-8">
                <label asp-for="Description" class="form-label"></label>
                <textarea asp-for="Description" rows="4" class="form-control"></textarea>
            </div>
            <div class="col-md-2">
                <label asp-for="StartDate" class="control-label"></label>
                <input asp-for="StartDate" class="form-control" readonly />
                <span asp-validation-for="StartDate" class="text-danger"></span>
            </div>
            <div class="col-md-2">
                <label asp-for="EndDate" class="control-label"></label>
                <input asp-for="EndDate" class="form-control" />
                <span asp-validation-for="EndDate" class="text-danger"></span>
            </div>
            <div class="col-md-3 m-2">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index" asp-controller="Project">Back to projects list</a>
</div>